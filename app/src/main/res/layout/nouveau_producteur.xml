<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Nom Du Producteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="77dp"
        android:id="@+id/textView12"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="38dp"
        android:id="@+id/textView13"
        android:layout_alignEnd="@+id/textView12"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Prefecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignEnd="@+id/textView13"
        android:layout_marginTop="43dp"
        android:id="@+id/textView14"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Canton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_alignEnd="@+id/textView14"
        android:layout_marginTop="42dp"
        android:id="@+id/textView15"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Village"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignEnd="@+id/textView15"
        android:layout_marginTop="51dp"
        android:id="@+id/textView16"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignEnd="@+id/textView16"
        android:layout_marginTop="30dp"
        android:id="@+id/textView17"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Sexe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_alignEnd="@+id/textView17"
        android:layout_marginTop="41dp"
        android:id="@+id/textView18"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Autres Informations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_alignEnd="@+id/textView18"
        android:layout_marginTop="52dp"
        android:id="@+id/textView19"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="40dp"
        android:id="@+id/editText"
        android:layout_above="@+id/textView13"
        android:layout_toEndOf="@+id/textView12" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText3"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginTop="17dp"
        android:id="@+id/editText4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginTop="20dp"
        android:id="@+id/editText5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignStart="@+id/editText4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/textView17"
        android:layout_alignStart="@+id/editText5"
        android:id="@+id/editText6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_above="@+id/textView18"
        android:layout_alignStart="@+id/editText6"
        android:id="@+id/editText7" />

    <RadioButton
        android:text="Masculin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView19"
        android:layout_alignStart="@+id/editText7"
        android:id="@+id/radioButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/radioButton"
        android:layout_alignEnd="@+id/editText7"
        android:layout_marginTop="35dp"
        android:id="@+id/editText8" />

    <TextView
        android:text="Enregistrer Un Nouveau Producteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/textView"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView12"
        android:textStyle="normal|bold" />

    <RadioButton
        android:text="Feminin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton2"
        android:layout_above="@+id/editText8"
        android:layout_alignEnd="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/producteur"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="237dp"
        android:id="@+id/imageView" />

    <Button
        android:text="Valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView17"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/button"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:background="@color/colorAccent" />

</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" >

        <include
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>